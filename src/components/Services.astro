---
import { useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const services = [
  {
    titleKey: 'services.diag.title' as const,
    descKey: 'services.diag.desc' as const,
    desc2Key: 'services.diag.desc2' as const,
    icon: `<circle cx="11" cy="11" r="7"/><path d="M21 21l-4.35-4.35"/>`,
  },
  {
    titleKey: 'services.systems.title' as const,
    descKey: 'services.systems.desc' as const,
    desc2Key: 'services.systems.desc2' as const,
    icon: `<path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>`,
  },
  {
    titleKey: 'services.consulting.title' as const,
    descKey: 'services.consulting.desc' as const,
    desc2Key: 'services.consulting.desc2' as const,
    icon: `<circle cx="12" cy="12" r="3"/><path d="M12 1v4M12 19v4M4.2 4.2l2.8 2.8M17 17l2.8 2.8M1 12h4M19 12h4M4.2 19.8l2.8-2.8M17 7l2.8-2.8"/>`,
  },
  {
    titleKey: 'services.training.title' as const,
    descKey: 'services.training.desc' as const,
    desc2Key: 'services.training.desc2' as const,
    icon: `<path d="M12 14l9-5-9-5-9 5 9 5z"/><path d="M12 14l6.16-3.42A12.08 12.08 0 0121 17.5c-3.18 1.65-5.88 2.5-9 2.5s-5.82-.85-9-2.5a12.08 12.08 0 012.84-6.92L12 14z"/>`,
  },
];
---

<section id="servicios" class="py-24 md:py-32 bg-slate-50/50">
  <div class="max-w-7xl mx-auto px-6 md:px-8">
    <div class="text-center mb-16 md:mb-24 fade-in">
      <h2 class="text-4xl sm:text-5xl md:text-6xl font-bold tracking-editorial leading-[0.95]">
        {t('services.title.1')}<br />
        <span class="text-slate-400">{t('services.title.2')}</span>
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
      {services.map((service) => (
        <div class="fade-in group bg-white border border-slate-200 rounded-2xl md:rounded-3xl p-10 md:p-12 transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl hover:border-slate-300">
          <div class="w-12 h-12 rounded-xl bg-slate-100 flex items-center justify-center mb-8 group-hover:bg-aion-dark group-hover:text-white transition-colors duration-500">
            <svg viewBox="0 0 24 24" class="w-6 h-6 stroke-current fill-none" style="stroke-width: 1.5; stroke-linecap: round; stroke-linejoin: round;" set:html={service.icon} />
          </div>
          <h3 class="text-2xl font-bold text-slate-900 mb-4">
            {t(service.titleKey)}
          </h3>
          <p class="text-base text-slate-600 leading-relaxed mb-3">
            {t(service.descKey)}
          </p>
          <p class="text-base text-slate-500 leading-relaxed" set:html={t(service.desc2Key)} />
        </div>
      ))}
    </div>
  </div>
</section>
