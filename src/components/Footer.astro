---
import { useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const basePath = `/${lang}`;
---

<footer class="bg-aion-dark text-white pt-16 pb-8">
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
      <!-- Brand -->
      <div>
        <a href={`${basePath}/`}>
          <img src="/logo-transparent.svg" alt="AIon Growth Studio" class="h-14 w-auto mb-4" />
        </a>
        <p class="text-blue-200/70 text-sm leading-relaxed">
          {t('footer.tagline')}
        </p>
      </div>

      <!-- Solutions -->
      <div>
        <h4 class="font-display font-semibold text-lg mb-5">{t('footer.solutions')}</h4>
        <ul class="space-y-3 text-blue-200/70">
          <li><a href={`${basePath}/#diagnostico`} class="hover:text-aion-cyan transition-colors text-sm">{t('footer.diagnostic')}</a></li>
          <li><a href={`${basePath}/`} class="hover:text-aion-cyan transition-colors text-sm">{t('footer.platform')}</a></li>
          <li><a href={`${basePath}/`} class="hover:text-aion-cyan transition-colors text-sm">{t('footer.strategy')}</a></li>
          <li><a href={`${basePath}/`} class="hover:text-aion-cyan transition-colors text-sm">{t('footer.automation')}</a></li>
          <li><a href={`${basePath}/`} class="hover:text-aion-cyan transition-colors text-sm">{t('footer.training')}</a></li>
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="font-display font-semibold text-lg mb-5">{t('footer.company')}</h4>
        <ul class="space-y-3 text-blue-200/70">
          <li><a href={`${basePath}/`} class="hover:text-aion-cyan transition-colors text-sm">{t('footer.about')}</a></li>
          <li><a href={`/${lang === 'es' ? '' : 'en/'}blog`} class="hover:text-aion-cyan transition-colors text-sm">{t('footer.blog')}</a></li>
          <li><a href={`${basePath}/`} class="hover:text-aion-cyan transition-colors text-sm">{t('footer.cases')}</a></li>
          <li><a href={`${basePath}/#diagnostico`} class="hover:text-aion-cyan transition-colors text-sm">{t('footer.contact')}</a></li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-display font-semibold text-lg mb-5">{t('footer.contact')}</h4>
        <ul class="space-y-3 text-blue-200/70 text-sm">
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-aion-cyan/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            {t('footer.location')}
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-aion-cyan/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:hola@aiongrowth.studio" class="hover:text-aion-cyan transition-colors">
              hola@aiongrowth.studio
            </a>
          </li>
        </ul>

        <div class="flex gap-3 mt-6">
          <a href="#" class="w-10 h-10 bg-white/5 border border-white/10 rounded-xl flex items-center justify-center hover:bg-aion-blue hover:border-aion-blue transition-all duration-300 hover:scale-110">
            <span class="sr-only">LinkedIn</span>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a href="#" class="w-10 h-10 bg-white/5 border border-white/10 rounded-xl flex items-center justify-center hover:bg-aion-blue hover:border-aion-blue transition-all duration-300 hover:scale-110">
            <span class="sr-only">Twitter</span>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom -->
    <div class="border-t border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center text-sm text-blue-200/50">
      <p>{t('footer.copyright')}</p>
      <div class="flex gap-6 mt-4 md:mt-0">
        <a href={`${basePath}/`} class="hover:text-aion-cyan transition-colors">{t('footer.privacy')}</a>
        <a href={`${basePath}/`} class="hover:text-aion-cyan transition-colors">{t('footer.terms')}</a>
        <a href={`${basePath}/`} class="hover:text-aion-cyan transition-colors">{t('footer.cookies')}</a>
      </div>
    </div>
  </div>
</footer>
