---
import { useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const basePath = `/${lang}`;
---

<footer class="bg-slate-900 text-white pt-20 pb-10">
  <div class="max-w-7xl mx-auto px-6 md:px-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-12 md:gap-16 mb-16">
      <!-- Brand -->
      <div>
        <a href={`${basePath}/`}>
          <img src="/logo-aion-dark.png" alt="AION Growth Studio" class="h-[100px] w-auto mb-5" />
        </a>
        <p class="text-slate-400 text-sm leading-relaxed">
          {t('footer.tagline')}
        </p>
      </div>

      <!-- Solutions -->
      <div>
        <h4 class="font-semibold text-sm uppercase tracking-wider text-slate-300 mb-5">{t('footer.solutions')}</h4>
        <ul class="space-y-3">
          <li><a href={`${basePath}/#soluciones`} class="text-slate-400 hover:text-white transition-colors text-sm">{t('footer.diagnostic')}</a></li>
          <li><a href={`${basePath}/#soluciones`} class="text-slate-400 hover:text-white transition-colors text-sm">{t('footer.systems')}</a></li>
          <li><a href={`${basePath}/#soluciones`} class="text-slate-400 hover:text-white transition-colors text-sm">{t('footer.consulting')}</a></li>
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="font-semibold text-sm uppercase tracking-wider text-slate-300 mb-5">{t('footer.company')}</h4>
        <ul class="space-y-3">
          <li><a href={`${basePath}/`} class="text-slate-400 hover:text-white transition-colors text-sm">{t('footer.about')}</a></li>
          <li><a href={`/${lang === 'es' ? '' : 'en/'}blog`} class="text-slate-400 hover:text-white transition-colors text-sm">{t('footer.blog')}</a></li>
          <li><a href={`${basePath}/#casos`} class="text-slate-400 hover:text-white transition-colors text-sm">{t('footer.cases')}</a></li>
          <li><a href={`${basePath}/#contacto`} class="text-slate-400 hover:text-white transition-colors text-sm">{t('footer.contact')}</a></li>
        </ul>
      </div>

      <!-- Newsletter + Contact -->
      <div>
        <h4 class="font-semibold text-sm uppercase tracking-wider text-slate-300 mb-5">{t('footer.newsletter')}</h4>
        <form class="flex gap-2 mb-6">
          <input
            type="email"
            placeholder={t('footer.newsletter.placeholder')}
            class="flex-1 px-4 py-2.5 bg-slate-800 border border-slate-700 rounded-xl text-sm text-white placeholder-slate-500 outline-none focus:border-slate-500 transition-colors"
          />
          <button
            type="submit"
            class="px-4 py-2.5 bg-white text-slate-900 font-medium text-sm rounded-xl hover:bg-slate-100 transition-colors"
          >
            {t('footer.newsletter.cta')}
          </button>
        </form>

        <div class="text-slate-400 text-sm space-y-2">
          <p>{t('footer.location')}</p>
          <a href="mailto:hola@aiongrowth.studio" class="hover:text-white transition-colors block">
            hola@aiongrowth.studio
          </a>
        </div>

        <div class="flex gap-3 mt-5">
          <a href="#" class="w-9 h-9 bg-slate-800 rounded-lg flex items-center justify-center hover:bg-slate-700 transition-colors">
            <span class="sr-only">LinkedIn</span>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a href="#" class="w-9 h-9 bg-slate-800 rounded-lg flex items-center justify-center hover:bg-slate-700 transition-colors">
            <span class="sr-only">X</span>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom -->
    <div class="border-t border-slate-800 pt-8 flex flex-col md:flex-row justify-between items-center text-xs text-slate-500">
      <p>{t('footer.copyright')}</p>
      <div class="flex gap-6 mt-4 md:mt-0">
        <a href={`${basePath}/`} class="hover:text-slate-300 transition-colors">{t('footer.privacy')}</a>
        <a href={`${basePath}/`} class="hover:text-slate-300 transition-colors">{t('footer.terms')}</a>
        <a href={`${basePath}/`} class="hover:text-slate-300 transition-colors">{t('footer.cookies')}</a>
      </div>
    </div>
  </div>
</footer>
