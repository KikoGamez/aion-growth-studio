---
import { useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="casos" class="py-24 md:py-32 bg-slate-50">
  <div class="w-full px-6 md:px-8 lg:px-16">

    <p class="text-sm font-medium text-slate-500 mb-8 md:mb-12 tracking-wide fade-in flex items-center gap-2.5">
      <svg class="w-4 h-4 text-aion-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 00.75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 00-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0112 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 01-.673-.38m0 0A2.18 2.18 0 013 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 013.413-.387m7.5 0V5.25A2.25 2.25 0 0013.5 3h-3a2.25 2.25 0 00-2.25 2.25v.894m7.5 0a48.667 48.667 0 00-7.5 0M12 12.75h.008v.008H12v-.008z" />
      </svg>
      {t('work.label')}
    </p>

    <h2 class="text-4xl sm:text-5xl md:text-6xl font-bold text-slate-900 mb-4 md:mb-6 fade-in">
      {t('work.title')}
    </h2>

    <p class="text-lg md:text-xl text-slate-600 mb-4 fade-in">{t('work.subtitle')}</p>

    <p class="text-base md:text-lg text-slate-600 mb-12 md:mb-16 max-w-3xl leading-relaxed fade-in">
      {t('work.desc')}
    </p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8 mb-12">

      <!-- Case 1: SEO/GEO Editorial Engine -->
      <div class="fade-in group">
        <div class="relative rounded-2xl overflow-hidden mb-6 aspect-[3/4] work-card-1">
          <div class="absolute inset-0 work-card-pattern"></div>
          <div class="absolute top-4 left-4 z-10">
            <span class="px-4 py-2 rounded-full bg-white/20 backdrop-blur-md text-white text-sm font-medium">
              {t('work.1.tag')}
            </span>
          </div>

          <!-- Mock: Search Results UI -->
          <div class="absolute inset-0 flex items-center justify-center p-6 pt-16">
            <div class="w-full max-w-[240px] space-y-3">
              <!-- Search bar -->
              <div class="bg-white/10 backdrop-blur-sm border border-white/15 rounded-lg px-3 py-2 flex items-center gap-2">
                <svg class="w-3.5 h-3.5 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                <div class="h-2 bg-white/20 rounded flex-1"></div>
              </div>
              <!-- Result 1 - Highlighted -->
              <div class="bg-white/10 backdrop-blur-sm border-2 border-cyan-400/50 rounded-lg p-3 relative">
                <div class="flex items-center gap-2 mb-2">
                  <span class="text-[10px] font-bold text-cyan-300 bg-cyan-400/20 px-1.5 py-0.5 rounded">#1</span>
                  <div class="h-1.5 bg-white/30 rounded flex-1"></div>
                </div>
                <div class="h-1.5 bg-white/15 rounded w-full mb-1.5"></div>
                <div class="h-1.5 bg-white/10 rounded w-3/4"></div>
              </div>
              <!-- Result 2 -->
              <div class="bg-white/5 border border-white/10 rounded-lg p-3">
                <div class="flex items-center gap-2 mb-2">
                  <span class="text-[10px] text-white/40 font-medium">#2</span>
                  <div class="h-1.5 bg-white/15 rounded flex-1"></div>
                </div>
                <div class="h-1.5 bg-white/10 rounded w-full mb-1.5"></div>
                <div class="h-1.5 bg-white/7 rounded w-2/3"></div>
              </div>
              <!-- Result 3 -->
              <div class="bg-white/5 border border-white/10 rounded-lg p-3">
                <div class="flex items-center gap-2 mb-2">
                  <span class="text-[10px] text-white/40 font-medium">#3</span>
                  <div class="h-1.5 bg-white/15 rounded flex-1"></div>
                </div>
                <div class="h-1.5 bg-white/10 rounded w-full mb-1.5"></div>
                <div class="h-1.5 bg-white/7 rounded w-1/2"></div>
              </div>
            </div>
          </div>

          <!-- Floating SEO Score Badge -->
          <div class="absolute top-4 right-4 z-10">
            <div class="bg-white/15 backdrop-blur-md border border-white/20 rounded-xl px-3 py-2 text-center">
              <div class="text-[10px] text-white/60 uppercase tracking-wider">SEO</div>
              <div class="text-2xl font-bold text-cyan-300 leading-none">92</div>
            </div>
          </div>
        </div>
        <h3 class="text-xl md:text-2xl font-bold text-slate-900 mb-2 group-hover:text-[#0066FF] transition-colors">
          {t('work.1.title')}
        </h3>
        <p class="text-slate-600">{t('work.1.desc')}</p>
      </div>

      <!-- Case 2: Lead Generation -->
      <div class="fade-in group">
        <div class="relative rounded-2xl overflow-hidden mb-6 aspect-[3/4] work-card-2">
          <div class="absolute inset-0 work-card-pattern"></div>
          <div class="absolute top-4 left-4 z-10">
            <span class="px-4 py-2 rounded-full bg-white/20 backdrop-blur-md text-white text-sm font-medium">
              {t('work.2.tag')}
            </span>
          </div>

          <!-- Mock: CRM Pipeline UI -->
          <div class="absolute inset-0 flex items-center justify-center p-6 pt-16">
            <div class="w-full max-w-[240px] space-y-3">
              <!-- Avatars + leads count -->
              <div class="flex items-center justify-between mb-1">
                <div class="flex -space-x-2">
                  <div class="w-7 h-7 rounded-full bg-blue-400/40 border-2 border-white/20"></div>
                  <div class="w-7 h-7 rounded-full bg-cyan-400/40 border-2 border-white/20"></div>
                  <div class="w-7 h-7 rounded-full bg-indigo-400/40 border-2 border-white/20"></div>
                  <div class="w-7 h-7 rounded-full bg-white/15 border-2 border-white/20 flex items-center justify-center">
                    <span class="text-[8px] text-white/70 font-medium">+244</span>
                  </div>
                </div>
                <span class="text-[11px] text-white/60 font-medium">+247 leads</span>
              </div>
              <!-- Contact Card 1 - Qualified -->
              <div class="bg-white/10 backdrop-blur-sm border border-white/15 rounded-lg p-3 flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-emerald-400/30 flex-shrink-0 flex items-center justify-center">
                  <svg class="w-4 h-4 text-emerald-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="h-1.5 bg-white/25 rounded w-3/4 mb-1.5"></div>
                  <div class="h-1.5 bg-white/10 rounded w-1/2"></div>
                </div>
                <span class="text-[9px] font-semibold text-emerald-300 bg-emerald-400/20 px-2 py-0.5 rounded-full flex-shrink-0">Qualified</span>
              </div>
              <!-- Contact Card 2 - Nurture -->
              <div class="bg-white/10 backdrop-blur-sm border border-white/15 rounded-lg p-3 flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-amber-400/30 flex-shrink-0 flex items-center justify-center">
                  <svg class="w-4 h-4 text-amber-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="h-1.5 bg-white/25 rounded w-2/3 mb-1.5"></div>
                  <div class="h-1.5 bg-white/10 rounded w-2/5"></div>
                </div>
                <span class="text-[9px] font-semibold text-amber-300 bg-amber-400/20 px-2 py-0.5 rounded-full flex-shrink-0">Nurture</span>
              </div>
              <!-- Contact Card 3 - New -->
              <div class="bg-white/10 backdrop-blur-sm border border-white/15 rounded-lg p-3 flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-blue-400/30 flex-shrink-0 flex items-center justify-center">
                  <svg class="w-4 h-4 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="h-1.5 bg-white/25 rounded w-4/5 mb-1.5"></div>
                  <div class="h-1.5 bg-white/10 rounded w-1/3"></div>
                </div>
                <span class="text-[9px] font-semibold text-blue-300 bg-blue-400/20 px-2 py-0.5 rounded-full flex-shrink-0">New</span>
              </div>
            </div>
          </div>

          <!-- Floating Conv Rate Badge -->
          <div class="absolute top-4 right-4 z-10">
            <div class="bg-white/15 backdrop-blur-md border border-white/20 rounded-xl px-3 py-2 text-center">
              <div class="text-[10px] text-white/60 uppercase tracking-wider">Conv.</div>
              <div class="text-lg font-bold text-white leading-none">+34%</div>
            </div>
          </div>
        </div>
        <h3 class="text-xl md:text-2xl font-bold text-slate-900 mb-2 group-hover:text-[#0066FF] transition-colors">
          {t('work.2.title')}
        </h3>
        <p class="text-slate-600">{t('work.2.desc')}</p>
      </div>

      <!-- Case 3: AI Agents & Automation -->
      <div class="fade-in group">
        <div class="relative rounded-2xl overflow-hidden mb-6 aspect-[3/4] work-card-3">
          <div class="absolute inset-0 work-card-pattern"></div>
          <div class="absolute top-4 left-4 z-10 flex gap-2">
            <span class="px-3 py-1.5 rounded-full bg-white/20 backdrop-blur-md text-white text-xs font-medium">
              {t('work.3.tag.1')}
            </span>
            <span class="px-3 py-1.5 rounded-full bg-white/20 backdrop-blur-md text-white text-xs font-medium">
              {t('work.3.tag.2')}
            </span>
          </div>

          <!-- Mock: Agent Workflow UI -->
          <div class="absolute inset-0 flex items-center justify-center p-6 pt-16">
            <div class="w-full max-w-[240px] relative" style="height: 220px;">
              <!-- Trigger Node -->
              <div class="absolute top-0 left-1/2 -translate-x-1/2 bg-white/10 backdrop-blur-sm border border-white/15 rounded-lg px-4 py-2.5 flex items-center gap-2">
                <div class="w-2 h-2 rounded-full bg-cyan-400 agent-pulse"></div>
                <span class="text-[10px] text-white/70 font-medium">Trigger</span>
              </div>
              <!-- Connector line down -->
              <div class="absolute top-[42px] left-1/2 w-px h-[28px] bg-white/20"></div>
              <!-- Process Node -->
              <div class="absolute top-[70px] left-1/2 -translate-x-1/2 bg-white/10 backdrop-blur-sm border border-cyan-400/30 rounded-lg px-4 py-2.5 flex items-center gap-2">
                <svg class="w-3 h-3 text-cyan-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
                <span class="text-[10px] text-white/70 font-medium">Process</span>
              </div>
              <!-- Connector split -->
              <div class="absolute top-[112px] left-1/2 w-px h-[20px] bg-white/20"></div>
              <div class="absolute top-[132px] left-[25%] right-[25%] h-px bg-white/20"></div>
              <div class="absolute top-[132px] left-[25%] w-px h-[20px] bg-white/20"></div>
              <div class="absolute top-[132px] right-[25%] w-px h-[20px] bg-white/20"></div>
              <!-- Branch 1 -->
              <div class="absolute top-[152px] left-0 bg-white/10 backdrop-blur-sm border border-white/15 rounded-lg px-3 py-2 flex items-center gap-1.5">
                <div class="w-1.5 h-1.5 rounded-full bg-emerald-400"></div>
                <span class="text-[9px] text-white/60 font-medium">Email</span>
              </div>
              <!-- Branch 2 -->
              <div class="absolute top-[152px] right-0 bg-white/10 backdrop-blur-sm border border-white/15 rounded-lg px-3 py-2 flex items-center gap-1.5">
                <div class="w-1.5 h-1.5 rounded-full bg-emerald-400"></div>
                <span class="text-[9px] text-white/60 font-medium">CRM</span>
              </div>
              <!-- Status badge -->
              <div class="absolute bottom-0 left-1/2 -translate-x-1/2 bg-emerald-400/15 border border-emerald-400/30 rounded-full px-3 py-1 flex items-center gap-1.5">
                <div class="w-1.5 h-1.5 rounded-full bg-emerald-400 agent-pulse"></div>
                <span class="text-[9px] text-emerald-300 font-semibold">Running</span>
              </div>
            </div>
          </div>

          <!-- Floating Agents Badge -->
          <div class="absolute top-4 right-4 z-10">
            <div class="bg-white/15 backdrop-blur-md border border-white/20 rounded-xl px-3 py-2 flex items-center gap-2">
              <div class="w-2 h-2 rounded-full bg-emerald-400 agent-pulse"></div>
              <span class="text-[11px] text-white/80 font-medium">3 agents</span>
            </div>
          </div>
        </div>
        <h3 class="text-xl md:text-2xl font-bold text-slate-900 mb-2 group-hover:text-[#0066FF] transition-colors">
          {t('work.3.title')}
        </h3>
        <p class="text-slate-600">{t('work.3.desc')}</p>
      </div>

    </div>

    <!-- CTA -->
    <div class="text-center fade-in">
      <a href="#contacto" class="inline-flex items-center gap-2 text-slate-900 font-semibold text-lg hover:text-[#0066FF] transition-colors">
        {t('work.cta')}
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>

  </div>
</section>

<style>
  .work-card-1 {
    background: linear-gradient(135deg, #0B1B3D 0%, #1A5490 50%, #0B1B3D 100%);
  }
  .work-card-2 {
    background: linear-gradient(135deg, #0066FF 0%, #00D4FF 100%);
  }
  .work-card-3 {
    background: linear-gradient(135deg, #1e293b 0%, #334155 50%, #0f172a 100%);
  }
  .work-card-pattern {
    background-image:
      radial-gradient(circle at 25% 35%, rgba(255,255,255,0.1) 0%, transparent 50%),
      radial-gradient(circle at 75% 65%, rgba(255,255,255,0.07) 0%, transparent 40%),
      radial-gradient(rgba(255,255,255,0.04) 1px, transparent 1px);
    background-size: 100% 100%, 100% 100%, 24px 24px;
  }

  @keyframes agentPulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }
  .agent-pulse {
    animation: agentPulse 2s ease-in-out infinite;
  }
</style>
