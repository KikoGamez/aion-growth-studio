---
import { useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="relative overflow-hidden">
  <div class="hero-bg absolute inset-0"></div>
  <div class="hero-dots absolute inset-0"></div>

  <div class="relative max-w-7xl mx-auto px-6 md:px-8 py-32 md:py-44 lg:py-52">
    <div class="max-w-5xl mx-auto text-center">
      <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold text-white tracking-editorial leading-[0.95]">
        {t('hero.title.1')}<br />
        <span class="text-slate-400">{t('hero.title.2')}</span><br />
        {t('hero.title.3')}
      </h1>

      <p class="mt-10 md:mt-14 text-lg md:text-xl text-slate-300 leading-relaxed max-w-2xl mx-auto">
        {t('hero.subtitle')}
      </p>

      <p class="mt-4 text-base md:text-lg text-slate-400 font-medium">
        {t('hero.subtitle.2')}
      </p>

      <div class="mt-12 md:mt-16">
        <a
          href="#cta"
          class="inline-flex items-center gap-3 px-8 py-4 bg-white text-aion-dark font-semibold text-base rounded-2xl transition-all duration-500 hover:scale-105 hover:shadow-2xl hover:shadow-white/10"
        >
          {t('hero.cta')}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-bg {
    background: linear-gradient(160deg, #0B1B3D 0%, #122b5e 40%, #1A5490 70%, #0B1B3D 100%);
  }

  .hero-dots {
    background-image: radial-gradient(rgba(255, 255, 255, 0.06) 1px, transparent 1px);
    background-size: 32px 32px;
  }
</style>
