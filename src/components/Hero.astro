---
import { useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="hero relative min-h-[600px] flex items-center overflow-hidden">
  <div class="hero-bg absolute inset-0"></div>

  <!-- Mesh gradient orbs -->
  <div class="hero-orb hero-orb-1"></div>
  <div class="hero-orb hero-orb-2"></div>
  <div class="hero-orb hero-orb-3"></div>

  <!-- Grid pattern overlay -->
  <div class="hero-grid absolute inset-0"></div>

  <!-- Arc decoration -->
  <div class="hero-arc"></div>

  <div class="max-w-7xl mx-auto px-6 py-20 md:py-32 relative z-10 w-full">
    <div class="max-w-3xl">
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-display font-bold text-white mb-6 leading-[1.1] tracking-tight">
        {t('hero.title')}
      </h1>

      <p class="text-lg md:text-xl text-blue-100/80 mb-10 leading-relaxed max-w-2xl">
        {t('hero.subtitle')}
      </p>

      <div class="flex flex-col sm:flex-row items-start gap-4">
        <a
          href="#diagnostico"
          class="hero-cta group inline-flex items-center gap-3 px-8 py-4 text-white font-semibold rounded-2xl transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl"
        >
          {t('hero.cta')}
          <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <span class="text-blue-200/60 text-sm font-medium self-center">
          {t('hero.cta.subtitle')}
        </span>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-bg {
    background: linear-gradient(135deg, #0B1B3D 0%, #0d2a5c 40%, #1a4080 70%, #0B1B3D 100%);
  }

  .hero-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
  }

  .hero-orb-1 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, #0066FF 0%, transparent 70%);
    top: -100px;
    right: -100px;
    animation: orbFloat1 18s ease-in-out infinite alternate;
  }

  .hero-orb-2 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, #00D4FF 0%, transparent 70%);
    bottom: -80px;
    left: 20%;
    animation: orbFloat2 22s ease-in-out infinite alternate;
  }

  .hero-orb-3 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, #4f46e5 0%, transparent 70%);
    top: 40%;
    right: 30%;
    animation: orbFloat3 15s ease-in-out infinite alternate;
  }

  .hero-grid {
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
  }

  .hero-arc {
    position: absolute;
    inset: auto -8% 8% auto;
    width: 60%;
    height: 3px;
    background: linear-gradient(90deg, transparent, rgba(0, 212, 255, 0.6), transparent);
    transform: rotate(-6deg);
    filter: drop-shadow(0 0 12px rgba(0, 212, 255, 0.5));
  }

  .hero-cta {
    background: linear-gradient(135deg, #0066FF, #00D4FF);
    box-shadow: 0 16px 40px rgba(0, 102, 255, 0.3);
  }

  .hero-cta:hover {
    box-shadow: 0 20px 50px rgba(0, 102, 255, 0.4);
  }

  @keyframes orbFloat1 {
    0% { transform: translate(0, 0) scale(1); }
    100% { transform: translate(-40px, 30px) scale(1.1); }
  }

  @keyframes orbFloat2 {
    0% { transform: translate(0, 0) scale(1); }
    100% { transform: translate(30px, -20px) scale(1.05); }
  }

  @keyframes orbFloat3 {
    0% { transform: translate(0, 0) scale(1); }
    100% { transform: translate(-20px, 15px) scale(0.95); }
  }
</style>
