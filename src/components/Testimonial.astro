---
import { useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="py-24 md:py-32 bg-slate-50/80">
  <div class="max-w-7xl mx-auto px-6 md:px-8">
    <div class="max-w-4xl mx-auto text-center fade-in">
      <svg class="w-12 h-12 text-slate-200 mx-auto mb-10" fill="currentColor" viewBox="0 0 24 24">
        <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
      </svg>

      <blockquote class="text-2xl sm:text-3xl md:text-4xl font-semibold text-slate-900 leading-snug tracking-tight">
        {t('testimonial.quote')}
      </blockquote>

      <p class="mt-10 text-base text-slate-500 font-medium">
        {t('testimonial.author')}
      </p>
    </div>
  </div>
</section>
