---
import { useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="soluciones" class="py-24 md:py-32 bg-white">
  <div class="w-full px-6 md:px-8 lg:px-16">

    <p class="text-sm font-medium text-slate-500 mb-8 md:mb-12 tracking-wide fade-in flex items-center gap-2.5">
      <svg class="w-4 h-4 text-aion-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.455 2.456L21.75 6l-1.036.259a3.375 3.375 0 00-2.455 2.456z" />
      </svg>
      {t('benefits.label')}
    </p>

    <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6 md:mb-8 max-w-5xl fade-in">
      {t('benefits.title')}
    </h2>

    <p class="text-lg md:text-xl text-slate-600 max-w-3xl leading-relaxed fade-in">
      {t('benefits.desc')}
    </p>

  </div>
</section>
