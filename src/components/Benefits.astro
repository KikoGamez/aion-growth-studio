---
import { useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="soluciones" class="py-24 md:py-32 bg-white">
  <div class="max-w-7xl mx-auto px-6 md:px-8">

    <p class="text-sm font-medium text-slate-500 mb-8 md:mb-12 tracking-wide fade-in flex items-center gap-2">
      <img src="/logo-aion-dark.png" alt="" class="h-5 w-auto opacity-40" />
      {t('benefits.label')}
    </p>

    <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6 md:mb-8 max-w-5xl fade-in">
      {t('benefits.title')}
    </h2>

    <p class="text-lg md:text-xl text-slate-600 mb-16 md:mb-20 max-w-3xl leading-relaxed fade-in">
      {t('benefits.desc')}
    </p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">

      <!-- Card 1: Diagnostic -->
      <div class="fade-in p-8 md:p-10 rounded-2xl border border-slate-200 bg-white hover:-translate-y-2 hover:shadow-2xl transition-all duration-300">
        <h3 class="text-xl md:text-2xl font-bold text-slate-900 mb-4">
          {t('benefits.1.title')}
        </h3>
        <p class="text-slate-600 mb-6 leading-relaxed">
          {t('benefits.1.desc')}
        </p>
        <div class="pt-6 border-t border-slate-200">
          <p class="text-sm text-slate-500 mb-1">{t('benefits.1.stat.label')}</p>
          <p class="text-3xl font-bold text-slate-900">{t('benefits.1.stat.value')}</p>
        </div>
        <div class="mt-6 space-y-2">
          <p class="text-sm text-slate-600 flex items-center gap-2">
            <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
            {t('benefits.1.feature.1')}
          </p>
          <p class="text-sm text-slate-600 flex items-center gap-2">
            <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
            {t('benefits.1.feature.2')}
          </p>
        </div>
      </div>

      <!-- Card 2: Growth Intelligence -->
      <div class="fade-in p-8 md:p-10 rounded-2xl border border-slate-200 bg-white hover:-translate-y-2 hover:shadow-2xl transition-all duration-300">
        <h3 class="text-xl md:text-2xl font-bold text-slate-900 mb-4">
          {t('benefits.2.title')}
        </h3>
        <p class="text-slate-600 mb-6 leading-relaxed">
          {t('benefits.2.desc')}
        </p>
        <div class="pt-6 border-t border-slate-200">
          <p class="text-4xl font-bold text-slate-900">{t('benefits.2.stat.value')}</p>
          <p class="text-sm text-slate-500 mt-1">{t('benefits.2.stat.label')}</p>
        </div>
      </div>

      <!-- Card 3: Automation -->
      <div class="fade-in p-8 md:p-10 rounded-2xl border border-slate-200 bg-white hover:-translate-y-2 hover:shadow-2xl transition-all duration-300">
        <h3 class="text-xl md:text-2xl font-bold text-slate-900 mb-4">
          {t('benefits.3.title')}
        </h3>
        <p class="text-slate-600 mb-6 leading-relaxed">
          {t('benefits.3.desc')}
        </p>
        <div class="pt-6 border-t border-slate-200">
          <p class="text-sm text-slate-500 mb-1">{t('benefits.3.stat.label')}</p>
          <p class="text-3xl font-bold text-slate-900">{t('benefits.3.stat.value')}</p>
        </div>
      </div>

    </div>
  </div>
</section>
