---
import { useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="diagnostico" class="py-20 md:py-28 bg-white">
  <div class="max-w-7xl mx-auto px-6">
    <div class="max-w-5xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Left side - Content -->
        <div>
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-aion-blue/5 border border-aion-blue/10 mb-6">
            <div class="w-2 h-2 rounded-full bg-aion-cyan animate-pulse"></div>
            <span class="text-sm font-medium text-aion-blue">
              {lang === 'es' ? 'IA en tiempo real' : 'Real-time AI'}
            </span>
          </div>

          <h2 class="text-3xl md:text-4xl lg:text-[42px] font-display font-bold text-slate-900 mb-6 leading-tight">
            {t('form.title')}
          </h2>
          <p class="text-lg text-slate-600 leading-relaxed">
            {t('form.desc')}
          </p>

          <div class="mt-8 flex flex-col gap-4">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-xl bg-green-50 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-slate-700">{lang === 'es' ? 'Análisis completo en 2 minutos' : 'Full analysis in 2 minutes'}</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-xl bg-green-50 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-slate-700">{lang === 'es' ? 'Sin tarjeta de crédito' : 'No credit card required'}</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-xl bg-green-50 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-slate-700">{lang === 'es' ? 'Recomendaciones personalizadas' : 'Personalized recommendations'}</span>
            </div>
          </div>
        </div>

        <!-- Right side - Form -->
        <div class="bg-white rounded-2xl p-8 shadow-xl border border-gray-100 relative">
          <div class="absolute -top-px left-8 right-8 h-1 bg-gradient-to-r from-aion-blue to-aion-cyan rounded-b-full"></div>

          <form class="space-y-5">
            <div>
              <label for="company" class="block text-sm font-medium text-slate-700 mb-2">
                {t('form.company')}
              </label>
              <input
                type="text"
                id="company"
                name="company"
                placeholder={t('form.company.placeholder')}
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-aion-blue/30 focus:border-aion-blue transition-all bg-gray-50/50 outline-none"
                required
              />
            </div>

            <div>
              <label for="website" class="block text-sm font-medium text-slate-700 mb-2">
                {t('form.url')}
              </label>
              <input
                type="url"
                id="website"
                name="website"
                placeholder={t('form.url.placeholder')}
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-aion-blue/30 focus:border-aion-blue transition-all bg-gray-50/50 outline-none"
                required
              />
            </div>

            <div>
              <label for="sector" class="block text-sm font-medium text-slate-700 mb-2">
                {t('form.sector')}
              </label>
              <select
                id="sector"
                name="sector"
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-aion-blue/30 focus:border-aion-blue transition-all appearance-none bg-gray-50/50 outline-none"
                required
              >
                <option value="">{t('form.sector.placeholder')}</option>
                <option value="tecnologia">{t('form.sector.tech')}</option>
                <option value="retail">{t('form.sector.retail')}</option>
                <option value="servicios">{t('form.sector.services')}</option>
                <option value="manufactura">{t('form.sector.manufacturing')}</option>
                <option value="salud">{t('form.sector.health')}</option>
                <option value="educacion">{t('form.sector.education')}</option>
                <option value="finanzas">{t('form.sector.finance')}</option>
                <option value="otro">{t('form.sector.other')}</option>
              </select>
            </div>

            <div>
              <label for="country" class="block text-sm font-medium text-slate-700 mb-2">
                {t('form.country')}
              </label>
              <select
                id="country"
                name="country"
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-aion-blue/30 focus:border-aion-blue transition-all appearance-none bg-gray-50/50 outline-none"
                required
              >
                <option value="">{t('form.country.placeholder')}</option>
                <option value="espana">{t('form.country.spain')}</option>
                <option value="mexico">{t('form.country.mexico')}</option>
                <option value="colombia">{t('form.country.colombia')}</option>
                <option value="argentina">{t('form.country.argentina')}</option>
                <option value="chile">{t('form.country.chile')}</option>
                <option value="otro">{t('form.country.other')}</option>
              </select>
            </div>

            <button
              type="submit"
              class="w-full px-6 py-4 text-white font-semibold rounded-xl transition-all duration-300 transform hover:-translate-y-0.5 bg-gradient-to-r from-aion-blue to-aion-cyan shadow-lg hover:shadow-xl hover:shadow-aion-blue/25"
            >
              {t('form.submit')}
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
