---
import { useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const steps = [
  { num: '01', titleKey: 'process.1.title' as const, descKey: 'process.1.desc' as const },
  { num: '02', titleKey: 'process.2.title' as const, descKey: 'process.2.desc' as const },
  { num: '03', titleKey: 'process.3.title' as const, descKey: 'process.3.desc' as const },
  { num: '04', titleKey: 'process.4.title' as const, descKey: 'process.4.desc' as const },
];
---

<section id="proceso" class="py-24 md:py-32 bg-white">
  <div class="max-w-7xl mx-auto px-6 md:px-8">
    <div class="text-center mb-16 md:mb-24 fade-in">
      <h2 class="text-4xl sm:text-5xl md:text-6xl font-bold tracking-editorial leading-[0.95]">
        {t('process.title.1')}<br />
        <span class="text-slate-400">{t('process.title.2')}</span>
      </h2>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8 md:gap-12">
      {steps.map((step) => (
        <div class="fade-in">
          <div class="text-7xl md:text-8xl font-black text-slate-100 leading-none select-none">
            {step.num}
          </div>
          <h3 class="text-xl font-bold text-slate-900 mt-4 mb-3">
            {t(step.titleKey)}
          </h3>
          <p class="text-base text-slate-600 leading-relaxed">
            {t(step.descKey)}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
