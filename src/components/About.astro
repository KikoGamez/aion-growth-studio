---
import { useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const headlineWords = t('about.headline').split(' ');
---

<section class="py-24 md:py-32 bg-white">
  <div class="max-w-7xl mx-auto px-6 md:px-8">

    <p class="text-sm font-medium text-slate-500 mb-8 md:mb-12 tracking-wide fade-in">
      {t('about.label')}
    </p>

    <!-- Right-aligned text with per-word hover effect -->
    <div class="max-w-5xl ml-auto text-right mb-12 md:mb-16 fade-in">
      <h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-tight about-headline">
        {headlineWords.map((word: string) => (
          <span class="inline-block hover-word mr-[0.25em]">
            {word}
          </span>
        ))}
      </h2>
    </div>

    <!-- CTA link -->
    <div class="text-right max-w-5xl ml-auto mb-16 md:mb-20 fade-in">
      <a href="#contacto" class="inline-flex items-center gap-2 text-slate-900 font-semibold text-lg hover:text-[#0066FF] transition-colors">
        {t('about.cta')}
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>

    <!-- Stats cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 fade-in">
      <!-- Rating card -->
      <div class="p-8 rounded-2xl bg-slate-50 border border-slate-200">
        <div class="flex items-center gap-1 mb-3">
          {[1,2,3,4,5].map(() => (
            <svg class="w-6 h-6 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          ))}
        </div>
        <p class="text-slate-600 text-sm">{t('about.rating')}</p>
      </div>

      <!-- Revenue card -->
      <div class="p-8 rounded-2xl bg-slate-50 border border-slate-200">
        <p class="text-4xl font-bold text-slate-900 mb-2">{t('about.stat.1.value')}</p>
        <p class="text-slate-600 text-sm">{t('about.stat.1.label')}</p>
      </div>

      <!-- Deployment card -->
      <div class="p-8 rounded-2xl bg-slate-50 border border-slate-200">
        <p class="text-4xl font-bold text-slate-900 mb-2">{t('about.stat.2.value')}</p>
        <p class="text-slate-600 text-sm">{t('about.stat.2.label')}</p>
      </div>
    </div>

  </div>
</section>

<style>
  .hover-word {
    color: rgb(15 23 42);
    transition: color 0.3s ease;
    cursor: default;
  }

  .hover-word:hover {
    color: #0066FF;
  }
</style>
