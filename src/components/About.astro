---
import { useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="py-24 md:py-32 bg-white">
  <div class="max-w-7xl mx-auto px-6 md:px-8">
    <div class="max-w-4xl mx-auto text-center fade-in">
      <h2 class="text-4xl sm:text-5xl md:text-6xl font-bold tracking-editorial leading-[0.95]">
        {t('about.title.1')}<br />
        <span class="text-slate-400">{t('about.title.2')}</span>
      </h2>

      <div class="mt-12 md:mt-16 space-y-6 text-lg md:text-xl text-slate-600 leading-relaxed">
        <p>{t('about.text.1')}</p>
        <p>{t('about.text.2')}</p>
        <p class="font-bold text-slate-900">{t('about.text.3')}</p>
        <p>{t('about.text.4')}</p>
      </div>
    </div>

    <!-- Stats bar -->
    <div class="mt-20 md:mt-24 grid grid-cols-1 sm:grid-cols-3 gap-8 max-w-4xl mx-auto fade-in">
      <div class="text-center">
        <div class="text-4xl md:text-5xl font-bold text-aion-primary">{t('about.stat.1.value')}</div>
        <div class="text-slate-500 mt-2 text-sm">{t('about.stat.1.label')}</div>
      </div>
      <div class="text-center">
        <div class="text-4xl md:text-5xl font-bold text-aion-primary">{t('about.stat.2.value')}</div>
        <div class="text-slate-500 mt-2 text-sm">{t('about.stat.2.label')}</div>
      </div>
      <div class="text-center">
        <div class="text-4xl md:text-5xl font-bold text-aion-primary">{t('about.stat.3.value')}</div>
        <div class="text-slate-500 mt-2 text-sm">{t('about.stat.3.label')}</div>
      </div>
    </div>
  </div>
</section>
