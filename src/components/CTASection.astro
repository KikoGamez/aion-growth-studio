---
import { useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="cta" class="relative overflow-hidden">
  <div class="cta-bg absolute inset-0"></div>
  <div class="cta-dots absolute inset-0"></div>

  <div class="relative max-w-7xl mx-auto px-6 md:px-8 py-24 md:py-36">
    <div class="max-w-4xl mx-auto text-center fade-in">
      <h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white tracking-editorial leading-[0.95]">
        {t('cta.title.1')}<br />
        {t('cta.title.2')}
      </h2>

      <p class="mt-10 text-lg md:text-xl text-slate-300 leading-relaxed max-w-2xl mx-auto">
        {t('cta.text')}
      </p>

      <p class="mt-4 text-base text-slate-400">
        {t('cta.text.2')}
      </p>

      <div class="mt-12">
        <a
          href="mailto:hola@aiongrowth.studio"
          class="inline-flex items-center gap-3 px-8 py-4 bg-white text-aion-dark font-semibold text-base rounded-2xl transition-all duration-500 hover:scale-105 hover:shadow-2xl hover:shadow-white/10"
        >
          {t('cta.button')}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <p class="mt-4 text-sm text-slate-500">{t('cta.button.note')}</p>
      </div>
    </div>
  </div>
</section>

<style>
  .cta-bg {
    background: linear-gradient(160deg, #0B1B3D 0%, #1A5490 50%, #0B1B3D 100%);
  }

  .cta-dots {
    background-image: radial-gradient(rgba(255, 255, 255, 0.04) 1px, transparent 1px);
    background-size: 32px 32px;
  }
</style>
