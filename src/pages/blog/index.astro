---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const lang = 'es';

// Get all blog posts
const posts = await Astro.glob('./posts/*.md');

// Sort by date (newest first)
const sortedPosts = posts.sort((a, b) =>
  new Date(b.frontmatter.date).valueOf() - new Date(a.frontmatter.date).valueOf()
);
---

<Layout title="Blog - AIon Growth Studio" lang={lang}>
  <Header lang={lang} />

  <main class="pt-4 pb-20">
    <div class="max-w-7xl mx-auto px-6">
      <!-- Header -->
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h1 class="text-5xl md:text-6xl font-display font-bold text-gray-900 mb-6">
          Blog
        </h1>
        <p class="text-xl text-gray-600">
          Estrategia, tecnolog√≠a e inteligencia para hacer crecer tu negocio digital
        </p>
      </div>

      <!-- Posts Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        {sortedPosts.map((post) => (
          <article class="group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100">
            {post.frontmatter.image && (
              <div class="aspect-[16/9] overflow-hidden">
                <img
                  src={post.frontmatter.image}
                  alt={post.frontmatter.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
              </div>
            )}

            <div class="p-6">
              {post.frontmatter.category && (
                <span class="inline-block px-3 py-1 bg-accent-100 text-accent-700 text-sm font-medium rounded-full mb-3">
                  {post.frontmatter.category}
                </span>
              )}

              <h2 class="text-2xl font-display font-semibold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">
                <a href={post.url}>{post.frontmatter.title}</a>
              </h2>

              <p class="text-gray-600 mb-4 line-clamp-3">
                {post.frontmatter.description}
              </p>

              <div class="flex items-center justify-between text-sm text-gray-500">
                <span>{post.frontmatter.author}</span>
                <time datetime={post.frontmatter.date}>
                  {new Date(post.frontmatter.date).toLocaleDateString('es-ES', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </main>

  <Footer lang={lang} />
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
