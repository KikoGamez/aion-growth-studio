---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/utils';

const lang = 'es';
const t = useTranslations(lang);
---

<Layout title={t('diag.meta.title')} description={t('diag.meta.desc')} lang={lang}>
  <div class="diag-bg min-h-screen relative flex flex-col">
    <!-- Dot pattern overlay -->
    <div class="absolute inset-0 diag-dots pointer-events-none"></div>

    <!-- Compact Header -->
    <nav class="relative z-10 flex items-center justify-between px-6 md:px-12 py-5">
      <a href="/es/">
        <img src="/logo-aion-dark.png" alt="AION Growth Studio" class="h-10 md:h-12 w-auto" />
      </a>
      <div class="flex items-center gap-2">
        <a href="/es/diagnostico" class="text-sm font-medium text-white">ES</a>
        <span class="text-white/40 text-sm">|</span>
        <a href="/en/diagnostic" class="text-sm font-medium text-white/60 hover:text-white transition-colors">EN</a>
      </div>
    </nav>

    <!-- Centered Card -->
    <div class="relative z-10 flex-1 flex items-center justify-center px-4 py-8 md:py-12">
      <div class="w-full max-w-md bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-8 md:p-10 shadow-2xl">

        <!-- Title -->
        <div class="text-center mb-8">
          <h1 class="text-2xl md:text-3xl font-bold text-white mb-3">{t('diag.title')}</h1>
          <p class="text-sm text-slate-300 leading-relaxed">{t('diag.subtitle')}</p>
        </div>

        <!-- Social Login Buttons (visual only) -->
        <div class="space-y-3 mb-6">
          <button disabled class="w-full flex items-center justify-center gap-3 px-4 py-3 bg-white/10 border border-white/10 rounded-xl text-white text-sm font-medium opacity-60 cursor-not-allowed">
            <svg class="w-5 h-5" viewBox="0 0 24 24"><path fill="#fff" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 01-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z"/><path fill="#fff" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" opacity=".7"/><path fill="#fff" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" opacity=".5"/><path fill="#fff" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" opacity=".8"/></svg>
            {t('diag.google')}
          </button>
          <button disabled class="w-full flex items-center justify-center gap-3 px-4 py-3 bg-white/10 border border-white/10 rounded-xl text-white text-sm font-medium opacity-60 cursor-not-allowed">
            <svg class="w-5 h-5" fill="#fff" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
            {t('diag.linkedin')}
          </button>
          <button disabled class="w-full flex items-center justify-center gap-3 px-4 py-3 bg-white/10 border border-white/10 rounded-xl text-white text-sm font-medium opacity-60 cursor-not-allowed">
            <svg class="w-5 h-5" fill="#fff" viewBox="0 0 24 24"><path d="M11.4 24H0V11.4h11.4V24zM24 24H12.6V11.4H24V24zM11.4 11.4H0V0h11.4v11.4zM24 11.4H12.6V0H24v11.4z"/></svg>
            {t('diag.microsoft')}
          </button>
        </div>

        <!-- Divider -->
        <div class="flex items-center gap-4 mb-6">
          <div class="flex-1 h-px bg-white/10"></div>
          <span class="text-xs text-slate-400 whitespace-nowrap">{t('diag.or')}</span>
          <div class="flex-1 h-px bg-white/10"></div>
        </div>

        <!-- Coming Soon Message -->
        <div class="mb-6 p-4 bg-cyan-500/10 border border-cyan-400/20 rounded-xl">
          <div class="flex items-center gap-2 mb-2">
            <span class="px-2 py-0.5 bg-cyan-400/20 text-cyan-300 text-xs font-semibold rounded-full">{t('diag.comingsoon')}</span>
          </div>
          <p class="text-xs text-slate-300 leading-relaxed">{t('diag.comingsoon.desc')}</p>
        </div>

        <p class="text-sm text-slate-300 mb-5">{t('diag.notify')}</p>

        <!-- Form -->
        <form id="diag-form" class="space-y-4">
          <div>
            <label for="email" class="block text-xs font-medium text-slate-300 mb-1.5">{t('diag.email')}</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder={t('diag.email.placeholder')}
              class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-sm text-white placeholder-slate-500 outline-none focus:border-cyan-400/50 focus:bg-white/10 transition-all"
            />
          </div>
          <div>
            <label for="company" class="block text-xs font-medium text-slate-300 mb-1.5">{t('diag.company')}</label>
            <input
              type="text"
              id="company"
              name="company"
              placeholder={t('diag.company.placeholder')}
              class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-sm text-white placeholder-slate-500 outline-none focus:border-cyan-400/50 focus:bg-white/10 transition-all"
            />
          </div>
          <div>
            <label for="name" class="block text-xs font-medium text-slate-300 mb-1.5">{t('diag.name')}</label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder={t('diag.name.placeholder')}
              class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-sm text-white placeholder-slate-500 outline-none focus:border-cyan-400/50 focus:bg-white/10 transition-all"
            />
          </div>
          <button
            type="submit"
            id="diag-submit"
            class="w-full py-3 bg-white text-[#0B1B3D] font-semibold text-sm rounded-xl hover:bg-cyan-300 hover:scale-[1.02] transition-all duration-300 shadow-lg"
          >
            {t('diag.submit')}
          </button>
        </form>
        <input type="hidden" id="diag-submit-text" value={t('diag.submit')} />

        <!-- Success/Error Messages -->
        <div id="diag-success" class="hidden mt-4 p-4 bg-emerald-500/10 border border-emerald-400/20 rounded-xl text-sm text-emerald-300 text-center">
          {t('diag.success')}
        </div>
        <div id="diag-error" class="hidden mt-4 p-4 bg-red-500/10 border border-red-400/20 rounded-xl text-sm text-red-300 text-center">
          {t('diag.error')}
        </div>

      </div>
    </div>

    <!-- Minimal Footer -->
    <div class="relative z-10 text-center py-6 text-xs text-slate-500">
      <a href="/es/" class="hover:text-slate-300 transition-colors">AION Growth Studio</a>
      <span class="mx-2">Â·</span>
      <a href="mailto:hola@aiongrowth.studio" class="hover:text-slate-300 transition-colors">hola@aiongrowth.studio</a>
    </div>
  </div>
</Layout>

<style>
  .diag-bg {
    background: linear-gradient(160deg, #0B1B3D 0%, #1A5490 50%, #0B1B3D 100%);
  }
  .diag-dots {
    background-image: radial-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 32px 32px;
  }
</style>

<script>
  const form = document.getElementById('diag-form') as HTMLFormElement;
  const submitBtn = document.getElementById('diag-submit') as HTMLButtonElement;
  const successMsg = document.getElementById('diag-success')!;
  const errorMsg = document.getElementById('diag-error')!;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    submitBtn.disabled = true;
    submitBtn.textContent = '...';
    successMsg.classList.add('hidden');
    errorMsg.classList.add('hidden');

    const data = {
      email: (document.getElementById('email') as HTMLInputElement).value,
      company: (document.getElementById('company') as HTMLInputElement).value,
      name: (document.getElementById('name') as HTMLInputElement).value,
    };

    try {
      const res = await fetch('/api/diagnostic-leads', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      if (res.ok) {
        successMsg.classList.remove('hidden');
        form.reset();
      } else {
        errorMsg.classList.remove('hidden');
      }
    } catch {
      errorMsg.classList.remove('hidden');
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = (document.getElementById('diag-submit-text') as HTMLInputElement).value;
    }
  });
</script>
