---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { frontmatter, lang = 'es' } = Astro.props;
---

<Layout title={`${frontmatter.title} â€” AION Growth Studio`} description={frontmatter.description} lang={lang}>
  <Header lang={lang} />

  <article class="pb-20">
    <div class="py-16 md:py-24">
      <div class="max-w-7xl mx-auto px-6 md:px-8">
        <div class="max-w-3xl mx-auto">
          {frontmatter.category && (
            <span class="inline-block px-3 py-1 bg-slate-100 text-slate-600 text-sm font-medium rounded-full mb-6">
              {frontmatter.category}
            </span>
          )}

          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-slate-900 mb-6 leading-tight tracking-tight">
            {frontmatter.title}
          </h1>

          <div class="flex items-center gap-4 text-slate-500 text-sm">
            <span class="font-medium">{frontmatter.author}</span>
            <span>&middot;</span>
            <time datetime={frontmatter.date}>
              {new Date(frontmatter.date).toLocaleDateString(lang === 'en' ? 'en-US' : 'es-ES', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            {frontmatter.readTime && (
              <>
                <span>&middot;</span>
                <span>{frontmatter.readTime}</span>
              </>
            )}
          </div>
        </div>
      </div>
    </div>

    {frontmatter.image && (
      <div class="max-w-7xl mx-auto px-6 md:px-8 -mt-8 mb-12">
        <div class="max-w-4xl mx-auto">
          <img
            src={frontmatter.image}
            alt={frontmatter.title}
            class="w-full rounded-2xl"
          />
        </div>
      </div>
    )}

    <div class="max-w-7xl mx-auto px-6 md:px-8">
      <div class="max-w-3xl mx-auto prose">
        <slot />
      </div>
    </div>
  </article>

  <Footer lang={lang} />
</Layout>

<style is:global>
  .prose { color: rgb(71 85 105); }
  .prose h2 { font-size: 1.875rem; font-weight: 700; color: rgb(15 23 42); margin-top: 3rem; margin-bottom: 1.5rem; }
  .prose h3 { font-size: 1.5rem; font-weight: 600; color: rgb(15 23 42); margin-top: 2rem; margin-bottom: 1rem; }
  .prose p { font-size: 1.125rem; line-height: 1.75; margin-bottom: 1.5rem; }
  .prose a { color: #1A5490; font-weight: 500; }
  .prose a:hover { color: #0B1B3D; }
  .prose strong { color: rgb(15 23 42); font-weight: 600; }
  .prose ul, .prose ol { margin: 1.5rem 0; padding-left: 1.5rem; }
  .prose li { font-size: 1.125rem; margin-bottom: 0.5rem; }
  .prose blockquote { border-left: 3px solid rgb(203 213 225); padding-left: 1.5rem; font-style: italic; margin: 2rem 0; color: rgb(100 116 139); }
  .prose code { background: rgb(241 245 249); padding: 0.125rem 0.375rem; border-radius: 0.25rem; font-size: 0.875rem; }
  .prose pre { background: rgb(15 23 42); color: rgb(226 232 240); border-radius: 0.75rem; padding: 1.5rem; overflow-x: auto; margin: 2rem 0; }
  .prose pre code { background: transparent; color: inherit; padding: 0; }
  .prose img { border-radius: 0.75rem; margin: 2rem 0; }
</style>
